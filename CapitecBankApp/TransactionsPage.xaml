<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CapitecBankApp.TransactionsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Transactions"
             BackgroundColor="#F5F5F5">

    <StackLayout>

        <!-- Header Section -->
        <Border BackgroundColor="#0066CC" 
                StrokeThickness="0">
            <StackLayout Padding="20,50,20,20" Spacing="15">
                <Label Text="Transaction History" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>

                <!-- Filter Section -->
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Border BackgroundColor="White" 
                            StrokeShape="RoundRectangle 20"
                            StrokeThickness="0"
                            HorizontalOptions="Fill">
                        <Entry x:Name="SearchEntry"
                               Placeholder="Search transactions..."
                               FontSize="14"
                               Margin="15,8"/>
                    </Border>
                    <Border BackgroundColor="Transparent" 
                            Stroke="White"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 20"
                            WidthRequest="50"
                            HeightRequest="36">
                        <Label Text="ðŸ”" 
                               FontSize="16"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                </StackLayout>
            </StackLayout>
        </Border>

        <!-- Transactions List -->
        <CollectionView x:Name="TransactionsCollectionView"
                        ItemsSource="{Binding Transactions}"
                        BackgroundColor="Transparent"
                        Margin="20,20,20,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border BackgroundColor="White" 
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="0"
                            Margin="0,0,0,15">
                        <StackLayout Padding="15" Spacing="10">

                            <!-- Transaction Header -->
                            <StackLayout Orientation="Horizontal">
                                <Border BackgroundColor="{Binding CategoryColor}" 
                                        StrokeShape="RoundRectangle 20"
                                        WidthRequest="40" 
                                        HeightRequest="40"
                                        VerticalOptions="Center">
                                    <Label Text="{Binding Icon}" 
                                           FontSize="16"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                <Grid HorizontalOptions="Fill" 
                                             VerticalOptions="Center"
                                             Margin="15,0,0,0">
                                    <Label Text="{Binding Description}" 
                                           FontSize="14" 
                                           FontAttributes="Bold"
                                           TextColor="Black"/>
                                    <Label Text="{Binding DateTime}" 
                                           FontSize="12" 
                                           TextColor="Gray"/>
                                </Grid>
                                <Label Text="{Binding Amount}" 
                                       FontSize="14" 
                                       FontAttributes="Bold"
                                       TextColor="{Binding AmountColor}"
                                       VerticalOptions="Center"/>
                            </StackLayout>

                            <!-- Transaction Details -->
                            <StackLayout Orientation="Horizontal" 
                                         Spacing="20"
                                         Margin="55,0,0,0">
                                <StackLayout>
                                    <Label Text="Reference" 
                                           FontSize="10" 
                                           TextColor="Gray"/>
                                    <Label Text="{Binding Reference}" 
                                           FontSize="12" 
                                           TextColor="Black"/>
                                </StackLayout>
                                <StackLayout>
                                    <Label Text="Balance" 
                                           FontSize="10" 
                                           TextColor="Gray"/>
                                    <Label Text="{Binding Balance}" 
                                           FontSize="12" 
                                           TextColor="Black"/>
                                </StackLayout>
                            </StackLayout>

                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ContentPage>