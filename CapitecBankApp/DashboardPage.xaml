                                   FontSize="14" 
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </Border>

                    <!-- View Transactions -->
                    <Border Grid.Row="1" Grid.Column="1"
                            BackgroundColor="White" 
                            StrokeShape="RoundRectangle 15"
                            StrokeThickness="0">
